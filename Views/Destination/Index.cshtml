@{
    ViewData["Title"] = "Destination";
}

@model IEnumerable<Airline.Models.Destination>

<h1>Пункты</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New Aircraft Type</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id пункта</th>
            <th>Страна</th>
            <th>Город</th>
            <th>Аэропорт</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DestinationId</td>
                <td>@item.Country</td>
                <td>@item.City</td>
                <td>@item.Airport</td>

                <td style="display: flex; gap: 20px">
                    <a href="@Url.Action("Edit", new { id = item.DestinationId })" class="btn btn-primary">Изменить</a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@item.DestinationId" />
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
