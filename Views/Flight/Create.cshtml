@model Airline.Models.ViewModels.CreateFlightModel

<h2>Create Flight</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Flight.DepartureDestinationId"></label>
        <select asp-for="Flight.DepartureDestinationId" class="form-control">
            @foreach (var type in Model.Destination)
            {
                <option value=@type.DestinationId>@type.City - @type.Airport</option>
            }
        </select>
        <span asp-validation-for="Flight.DepartureDestinationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Flight.ArrivalDestinationId"></label>
        <select asp-for="Flight.ArrivalDestinationId" class="form-control">
            @foreach (var type in Model.Destination)
            {
                <option value=@type.DestinationId>@type.City - @type.Airport</option>
            }
        </select>
        <span asp-validation-for="Flight.ArrivalDestinationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Flight.DepartureDatetime"></label>
        <input type="datetime" asp-for="Flight.DepartureDatetime" class="form-control" />
        <span asp-validation-for="Flight.DepartureDatetime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Flight.ArrivalDatetime"></label>
        <input type="datetime" asp-for="Flight.ArrivalDatetime" class="form-control" />
        <span asp-validation-for="Flight.ArrivalDatetime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Flight.AircraftId"></label>
        <select asp-for="Flight.AircraftId" class="form-control">
            @foreach (var type in Model.Aircraft)
            {
                <option value=@type.AircraftId>@type.TailNumber</option>
            }
        </select>
        <span asp-validation-for="Flight.AircraftId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
